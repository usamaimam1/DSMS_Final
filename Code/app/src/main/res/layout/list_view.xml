<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <TextView
        android:id="@+id/timeduration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/dateduration"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:text="TimeDuration # "
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/dateduration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/requestNumber"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:text="DateDuration # "
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/expectedbill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/timeduration"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:text="Power Consumption # "
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/powerConsumption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/expectedbill"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:text="Expected Bill # "
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/waterConsumption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/powerConsumption"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:text="Water Extraction #"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/requestNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Request #"
        android:textAlignment="center"
        android:textSize="25dp"
        android:textColor="@color/valid"/>

    <TextView
        android:id="@+id/peakBill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/waterConsumption"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:text="Peak Hour Bill  #"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="@color/warning"/>

    <TextView
        android:id="@+id/nonpeakBill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/peakBill"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:text="Non Peak Hour Bill  #"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="@color/valid"/>


</RelativeLayout>